{
  "name": "typescript-common-library-starter",
  "version": "1.2.1",
  "description": "",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/bin/index.js",
    "dist/bin/create.js",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/templates/"
  ],
  "author": "mosby-zhou <zhoucong0725@foxmail.com>",
  "homepage": "https://github.com/mosby-zhou/typescript-common-library-starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/mosby-zhou/typescript-common-library-starter"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "bin": {
    "typescript-common-library-starter": "./dist/bin/index.js"
  },
  "scripts": {
    "poststart": "husky install",
    "commit": "gitcz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && prettier --write CHANGELOG.md",
    "lint": "eslint --ext .ts src/ test/",
    "prebuild": "rimraf dist",
    "build": "npm run api && rollup -c rollup.config.js && typedoc --out docs src",
    "start": "cross-env TEMPLATES_DIR=../../templates ts-node src/bin/index.ts",
    "check-release-version": "ts-node -P ./tsconfig.json ./tools/check-release-version",
    "test": "jest --coverage",
    "report-coverage": "coveralls < coverage/lcov.info",
    "api": "tsc --module commonjs && api-extractor run"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "ejs": "^3.1.6",
    "inquirer": "^8.2.0",
    "lodash": "^4.17.21",
    "shelljs": "^0.8.4",
    "yargs": "^17.2.1"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-console": "off",
      "no-return-await": "off",
      "object-shorthand": "off",
      "arrow-body-style": "off",
      "no-nested-ternary": "off",
      "consistent-return": "off",
      "no-param-reassign": "off",
      "prefer-destructuring": "off",
      "no-underscore-dangle": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "prettier/prettier": "error"
    },
    "ignorePatterns": []
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/templates/",
      "<rootDir>/node_modules/",
      "<rootDir>/temp/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/src/bin/",
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "prettier": {
    "printWidth": 150,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@microsoft/api-extractor": "^7.18.19",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-strip": "^2.1.0",
    "@types/ejs": "^3.1.0",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.10",
    "@types/shelljs": "^0.8.9",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-config": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  }
}
